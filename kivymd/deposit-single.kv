<DepositSingle>:
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(20)
        adaptive_height: True
        pos_hint: {'top': 0.9}

        MDLabel:
            text: "Deposit Book"
            theme_font_style: 'Custom'
            font_style: 'Display'
            role: 'small'
            halign: 'left'
            size_hint: 1, None
            height: dp(10)
        
        MDDivider:
            theme_divider_color: 'Custom'
            color: self.theme_cls.primaryColor
        
        MDTextField:
            id: deposit_book
            on_text: root.search_in_issue(deposit_book.text)

            MDTextFieldHintText:
                text: 'Enter book no.'
            
            MDTextFieldHelperText:
                text: root.help 
                mode: 'on_error'
        
        MDLabel:
            text: 'Info'
            theme_font_size: 'Custom'
            font_size: '24dp'
            padding: '0dp', '20dp', '0dp', '15dp'
        
        MDLabel:
            text: root.depo_info
            adaptive_height: True
        
        MDTextField:
            multiline: True
            id: comment
            MDTextFieldHintText:
                text: 'Comment'
            
        MDButton:
            style: 'filled'
            pos_hint: {'center_x': 0.5}
            on_press: root.deposit(deposit_book)
            MDButtonText:
                text: 'Deposit'
            