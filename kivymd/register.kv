<MDIconLabel2@MDBoxLayout>
    MDRelativeLayout:
        size_hint: 0.4,1
        MDIcon:
            icon: 'account-plus'
            pos_hint: {'center_x': 0.9, 'center_y':0.55}

    MDLabel:
        size_hint: 0.6,1
        text: 'Register User'
        halign: 'left'
        theme_font_size: 'Custom'
        font_size: '24sp'

<RegisterUser>:
    md_bg_color: self.theme_cls.backgroundColor
    MDBoxLayout:
        size_hint: 0.5,0.5
        pos_hint: {'center_x':0.5, 'center_y':0.55}
        orientation: 'vertical'
        spacing: '20dp'

        MDIconLabel2:
            pos_hint: {'center_x':0.5}
        MDTextField:
            MDTextFieldHintText:
                text: 'Cadet Name'
        
        MDTextField:
            MDTextFieldMaxLengthText:
                max_text_length: 4
            MDTextFieldHintText:
                text: 'Cadet No.'
        
        MDTextField:
            MDTextFieldHintText:
                text: 'Batch'
        
        MDButton:
            size_hint: None, None
            size: 110, 50
            pos_hint: {'center_x':0.5}
            
            MDButtonText:
                text: 'Register'
            

